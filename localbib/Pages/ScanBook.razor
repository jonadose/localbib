
@page "/scanbook"
<h3>ScanBook</h3>

<MudGrid Spacing="12" Class="d-flex mb-6" Justify="Justify.FlexStart">
     
        <MudItem xs="12">
            <MudStack Row="true">
                <MudTextField @bind-Value="Input" Label="Outlined" Variant="Variant.Outlined"></MudTextField>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="SearchBook" Disabled="@_processing">
                    @if (_processing)
                    {
                        <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                        <MudText Class="ms-2">Searching</MudText>
                    }
                    else
                    {
                        <MudText>Search</MudText>
                    }
                </MudButton>
            </MudStack>
        </MudItem>
</MudGrid>
